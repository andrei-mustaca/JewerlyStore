@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Authorization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/Shared.css"/>
    <link rel="stylesheet" href="~/css/MediaStyle.css"/>

</head>
<body>
<script src="~/js/shared_site.js"></script>
<script src="~/js/LoginRegistrationScript.js"></script>


@await Html.PartialAsync("LoginRegistration")
@await Html.PartialAsync("ConfirmEmailPartial")
<div id="header-top">
    <div class="logo">Вдохновение</div>
    <div class="button-header">
        @if (User.Identity.IsAuthenticated)
        {
            <button class="button" type="button" name="button" onclick="window.location.href='@Url.Action("Logout","Home")'">Выйти</button> 
        }
        @if (!User.Identity.IsAuthenticated)
        {
            <button class="button" id="click-to-hide" type="button" name="button">Войти</button>    
        }
    </div>
    <div id="hamburger" class="icon">&#9776</div>
</div>

<img class="img-header" alt="" src="~/Images/jewelry2.png"/>

<div id="header-bottom">
    <div class="menu">
        <ul>
            @if (User.Identity.IsAuthenticated)
            {
            <li><a asp-controller="Home" asp-action="SiteInformation">О нас</a></li>
            <li><a asp-controller="Home" asp-action="Main">Главная</a></li>
            <li><a asp-controller="Home" asp-action="Contacts">Контакты</a></li>
            <li><a asp-controller="Categories" asp-action="ListOfCategories">Каталог</a></li>
            <li><a asp-controller="Home" asp-action="CustomProduct">Изделия на заказ</a></li>
            <li><a asp-controller="Home" asp-action="Complaints">Жалобы</a></li>
            <li><a asp-controller="Home" asp-action="Profile">Профиль</a></li>
            }
            @if (!User.Identity.IsAuthenticated)
            {
            <li><a asp-controller="Home" asp-action="SiteInformation">О нас</a></li>
            <li><a asp-controller="Home" asp-action="Main">Главная</a></li>
            <li><a asp-controller="Home" asp-action="Contacts">Контакты</a></li>
            <li><a asp-controller="Categories" asp-action="ListOfCategories">Каталог</a></li>
            <li><a asp-controller="Home" asp-action="CustomProduct">Изделия на заказ</a></li>
            <li><a asp-controller="Home" asp-action="Complaints">Жалобы</a></li>
            }
        </ul>
    </div>
</div>
<div id="side-menu" class="side-menu">
    <div>
        <ul>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="Home" asp-action="SiteInformation">О нас</a></li>
                <li><a asp-controller="Home" asp-action="Main">Главная</a></li>
                <li><a asp-controller="Home" asp-action="Contacts">Контакты</a></li>
                <li><a asp-controller="Categories" asp-action="ListOfCategories">Каталог</a></li>
                <li><a asp-controller="Home" asp-action="CustomProduct">Изделия на заказ</a></li>
                <li><a asp-controller="Home" asp-action="Complaints">Жалобы</a></li>
                <li><a asp-controller="Home" asp-action="Profile">Профиль</a></li>
            }
            @if (!User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="Home" asp-action="SiteInformation">О нас</a></li>
                <li><a asp-controller="Home" asp-action="Main">Главная</a></li>
                <li><a asp-controller="Home" asp-action="Contacts">Контакты</a></li>
                <li><a asp-controller="Categories" asp-action="ListOfCategories">Каталог</a></li>
                <li><a asp-controller="Home" asp-action="CustomProduct">Изделия на заказ</a></li>
                <li><a asp-controller="Home" asp-action="Complaints">Жалобы</a></li> 
            }
        </ul>
    </div>
    <button class="button" id="side-menu-button-click-to-hide" type="button" name="button">Войти</button>
</div>


<div class="container">
    @RenderBody()
</div>

</body>
