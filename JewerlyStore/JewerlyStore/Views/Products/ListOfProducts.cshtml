@model JeverlyStroe.Domain.ViewModel.ListOfProductViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Список товаров";
}
<script src="~/js/ProductFilter.js"></script>
<link rel="stylesheet" href="~/css/ProductStyle.css"/>
<div class="container-list-products">
    <div class="link-page"><a href="/Home/SiteInformation">Главная</a>> <a href="/Categories/ListOfCategories">Категории</a>>Товары</div>
    <div class="container-filter-products">
        <div class="filter">
            <h3>Фильтр</h3>
            <div class="price-filter">
                <label class="title">Цена изделия:</label>
                <span id="min-label">0</span>
                <label>Минимальная цена:</label>
                <input type="range" id="min-price" min="0" max="2000" value="0"/>
                
                <label>Максимальная цена:</label>
                <input type="range" id="max-price" min="0" max="2000" value="2000"/>
                <span id="max-label">1000</span>
                
                <div>Текущие значения: <span id="price-values">0-2000</span></div>
            </div>
            <div class="filter-button">
                <button id="apply-filter">Применить фильтр</button>
            </div>
        </div>
        <div class="container-products">
            <div class="list-products">
                @foreach (var item in Model.Products)
                {
                    <div class="product-item"  onclick="window.location.href='@Url.Action("ProductPage","Products",new {Id=item.Id})'">
                        <img src="@item.PathImage" class="item-product-img"/>
                        <div class="item-info">
                            <h2>Название:@item.Name</h2>
                            <h2>Стоимость:@item.Cost руб.</h2>
                            <h2>Дата добавления в ассортимент:@item.CreatedAt</h2>
                        </div>
                        <input asp-for="@item.Id" value="@item.Id" style="display:none"/>
                        <input asp-for="@item.IdCategories" value="@item.IdCategories" style="display: none"/>
                    </div>
                }
            </div>
        </div>
    </div>
</div>