@model JeverlyStroe.Domain.ViewModel.ProductPageViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Товар";
}
<link rel="stylesheet" href="~/css/ProductStyle.css"/>
<div class="product">
    <div class="product-header">
        <h1>@Model.Name</h1>
    </div>

    <div class="product-details">
        <div class="product-images">
            <!-- Основное изображение -->
            <img id="main-image" src="@Model.PathImage" class="main-image" alt="Main Image"/>

            <!-- Сменяемые миниатюры изображений -->
            <div class="thumbnail-container">
                <img src="@Model.PathImage" alt="Thumbnail" class="thumbnail" onclick="changeImage(this)"/>

                @foreach (var picture in Model.PictureViewModels)
                {
                <img src="@picture.PathImg" alt="Thumbnail" class="thumbnail" onclick="changeImage(this)"/>
                }
            </div>
        </div>

        <!-- Информация о продукте -->
        <div class="product-info">
            <h2>@Model.Name</h2>
            <p><strong>Цена:</strong> @Model.Cost руб.</p>
            <p><strong>Дата добавления:</strong> @Model.CreatedAt</p>
        </div>
    </div>
</div>

<script>
    // Функция смены изображения
    function changeImage(thumbnail){
        const mainImage = document.getElementById("main-image");
        mainImage.src = thumbnail.src;
    }
</script>
